@import '~variables.styl'
@import '~mixins.styl'

.intro

	h1
		padding 0 0 40px

	p
		font-size 20px
		a
			border-bottom 1px dashed white
			transition color 200ms, border-color 200ms
			&:hover, &:active
				color gray
				border-bottom-color gray

	.chart
		background white
		font-size 14px
		color gray
		padding 10px

		h2
			font-size 16px
			margin 0 auto 5px
			text-align center

		.legend
			margin-top 10px
			position relative
			> *
				margin: 5px 0

		.box
			display inline-block
			width 12px
			height 12px
			margin-right 5px
			verticle-align middle
			&.gray
				background gray
			&.green
				background green

		.about-units
			font-size 12px
			font-style italic
			position absolute
			background rgba(gray, .9)
			color white
			border 1px solid gray
			top 100%
			padding 10px
			opacity 0
			transition opacity 200ms
			border-radius 4px
		&:hover, &:active
			.about-units
				opacity 1

		canvas
			width 100%
			height 340px
