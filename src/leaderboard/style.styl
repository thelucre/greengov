@import '~variables.styl'
@import '~mixins.styl'

.leaderboard
	background teal
	text-align center
	padding 80px

	.title
		display inline-block
		background gray
		padding 10px 40px
		font-size 34px
		text-align center


	.organizations
		text-align left

		li
			list-style none
			padding 0
			margin 0
			border-bottom 1px solid lightgray


			&:last-of-type
				border-bottom none

			&.header
				background gray
				height 40px
				line-height 40px

				font-weight 600
				text-transform uppercase
				font-size 13px
				padding 0 20px

			span
				display inline-block

				&.rank
					width 10%

				&.name
					width 55%

				&.pass-fail
					width 15%

				&.reduction
					width 15%
