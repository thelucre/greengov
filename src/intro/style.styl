@import '~variables.styl'
@import '~mixins.styl'

.intro

	h1
		padding 0 0 40px

	p
		font-size 20px
		a
			border-bottom 1px dashed white
			transition color 200ms, border-color 200ms
			&:hover, &:active
				color gray
				border-bottom-color gray

	.chart
		background white
		box-sizing content-box
		width 100%
		height 350px
